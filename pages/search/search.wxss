.icon-iconfontpinglun:before {
  content: "\e62f";
}

.icon-dianzan:before {
  content: "\e61c";
}

.icon-zhuanfa:before {
  content: "\e627";
}

.main {
  margin-top: 10rpx;
  background-color: rgb(240, 240, 240);
}

.back {
  background-color: white;
}

.user_image image {
  width: 100rpx;
  border-radius: 50%;
}

.user_flag {
  display: flex;
  flex-direction: row;
}

.user_flag view {
  font-weight: 100;
  color: white;
  font-size: 20rpx;
  margin-right: 10rpx;
  padding: 5rpx;
  border-radius: 4rpx;
}

.flag_sex {
  background-color: chocolate;
}

.flag_category {
  background-color: teal;
}

.flag_major {
  background-color: burlywood;
}

.flag_age {
  background-color: cornflowerblue;
}

.user_image {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.user_name {
  font-weight: 800;
  color: cadetblue;
}

.user_message {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10rpx;
}

.user_message image {
  width: 100rpx;
  border-radius: 50%;
}

.user_detail {
  display: flex;
  flex-direction: column;
  flex-grow: 2;
  justify-content: space-between;
  margin-left: 10rpx;
}

.main_middle {
  padding: 10rpx;
  text-align: center;
}

.main_middle_intro {
  word-wrap: break-word;
  text-align: left;
  font-size: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 6;
  -webkit-box-orient: vertical;
  letter-spacing: 5rpx;
}

.main_bottom {
  margin-bottom: 10rpx;
}

.main_middle_image {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
}

.main_middle_image image {
  display: inline-block;
  width: 235rpx;
  height: 235rpx;
  margin: 5rpx;
  border-radius: 10rpx;
}

.change_one image {
  display: inline-block;
  width: 100%;
  height: 500rpx;
  margin: 5rpx;
  border-radius: 10rpx;
}

.change_second image {
  display: inline-block;
  width: 48.5%;
  height: 345rpx;
  margin: 5rpx;
  border-radius: 10rpx;
}

.main_bottom_operation {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.goTop {
  height: 80rpx;
  width: 80rpx;
  position: fixed;
  bottom: 50rpx;
  right: 30rpx;
}
